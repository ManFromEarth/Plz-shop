page{  
   background-color: #f5f5f5; 
}
.amount {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 20rpx;
  border-bottom: 96rpx #f5f5f5 solid;
}
.amount-cell {
  height: 86rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx #e6e6e6 solid;
}
.amount-cell-no {
  border-bottom: none;
}
.left-cell {
  flex: 1;
}
.gray {
  color: #babbba;
}
.accounts {
  position: fixed;
  bottom: 0;
  height: 96rpx;
  background-color: white;
  width: 100%;
  display: flex;
}

.accountsL {
  flex: 1;
  display: flex;
  border-top: 1rpx #e5e5e5 solid;
  align-items: center;
}

.totalprice {
  font-size: 30rpx;
  margin-left: 20rpx;
}
.exeal {
  font-size: 24rpx;
  color: #ff4991;
}
.redprice {
  color: #ff4a91;
  margin-left: 12rpx;
}
.accountcell {
  font-size: 30rpx;
  margin-right: 24rpx;
  color: #fff;
}
.cartlist{
  background-color: #fff;
}
.proItem{
  height: 110rpx;
  display: flex;
  margin:0 40rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx #e6e6e6 solid;
}
.noboderPro{
   border-bottom: none;
}
.order-title{
  display: flex;
  height: 82rpx;
  background-color: #F5F5F5;
  padding-left: 30rpx; 
  align-items: center;
}
.isbuyNum{
  color: #8C8C8C;
}
.post{
  background-color: #fff;
  padding:0 30rpx;
  display: flex;
  height: 80rpx;
  align-items: center;
  border-top: 1rpx #e6e6e6 solid;
}
.wxPayAmount{
  color: #ff4a91;
  font-size: 30rpx;
  line-height: 30rpx;
  margin-left: 6rpx;
}
.arrowright {
  font-size: 0;
  line-height: 0;
  border-width: 14rpx;
  border-color: #fff;
  border-right-width: 0;
  border-style: dashed;
  border-left-style: solid;
  border-top-color: transparent;
  border-bottom-color: transparent;
}
.accountsR {
  background-color: #ff4a91;
  width: 244rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.payBtn{
  background-color: #ff4a91;
  color: #fff;
  height: 100%;
}
.payBtn::after{
  content: none;
}